from flask import Flask, request, jsonify
from collections import deque

app = Flask(__name__)

def solve_shiritori(start_word, end_char, word_list):
    queue = deque([(start_word, [start_word])])
    visited = {start_word}
    while queue:
        current, path = queue.popleft()
        if current.endswith(end_char): return path
        for word in word_list:
            if word not in visited and current[-1] == word[0]:
                visited.add(word)
                queue.append((word, path + [word]))
    return None

@app.route('/')
def index():
    start = request.args.get('start', 'りんご')
    end = request.args.get('end', 'ま')
    words = ["りんご", "ごりら", "らっぱ", "ぱんだ", "だるま", "まつり"]
    result = solve_shiritori(start, end, words)
    return jsonify({"path": result})

if __name__ == '__main__':
    app.run()
